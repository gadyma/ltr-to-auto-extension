{
  "manifest_version": 3,
  "name": "LTR to Auto Direction Changer",
  "version": "1.0",
  "description": "משנה כיוון טקסט מ-LTR ל-Auto בשדות נבחרים באתרים",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RTL to Auto Direction"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}